<%- include('includes/head')  %>

    <body>

        <%#- include('includes/nav2')%>
            <%- include('includes/nav')  %>

                <div class="container">

                    <div class="row">
                        <div class="col-lg-2"> </div>

                        <div class="col-lg-8 my-3">
                            <h1 class="text-center">
                                Agenda
                            </h1>

                            <p class="text-center lead">
                                Seus contatos est√£o abaixo :D
                            </p>

                            <%- include('includes/messages')%>

                                <% if(contatos.length > 0) { %>

                                    <div class="responsive-table">
                                        <table class="table my-3">

                                            <% contatos.forEach(contatos => {  %>
                                                <tr>
                                                    <td>
                                                        <%= contatos.nome %>
                                                    </td>
                                                    <td>
                                                        <%= contatos.sobrenome %>
                                                    </td>
                                                    <td>
                                                        <%= contatos.telefone %>
                                                    </td>
                                                    <td>
                                                        <%= contatos.email %>
                                                    </td>

                                                    <td>
                                                        <a href="/contato/index/<%= contatos.id %>" class="href"> Editar </a>
                                                    </td>
                                                    <td>
                                                        <a href="/contato/delete/<%= contatos.id %>" class="href text-danger"> Excluir </a>
                                                    </td>

                                                </tr>
                                                <% }); %>


                                        </table>
                                    </div>

                                    <% } else { %>
                                        <p class="text-center lead">
                                            Nenhum contato aqui. Adicione!
                                        </p>
                                        <% } %>


                        </div>
                    </div>

                </div>

                <%- include('includes/footer')  %>