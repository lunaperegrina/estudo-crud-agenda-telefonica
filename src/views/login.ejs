                        <div class="col-lg-8 my-3">
                            <h1 class="text-center">
                                Criar conta ou entrar

                                <br>

                                <%#- csrfToken %>
                            </h1>
                            <p class="text-center lead">
                                Faça seu login ou crie sua conta!

                                <%- include('includes/messages') %>



                                    <div class="row">
                                        <div class="col-lg">

                                            <h4>
                                                Faça seu cadastro
                                            </h4>
                                            <p>
                                                Se não tem uma conta, realize o cadastro
                                            </p>

                                            <form action="/login/register" method="POST">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="email" name="email" class="form-control my-2">
                                                </div>

                                                <div class="form-group">
                                                    <label>Senha</label>
                                                    <input type="password" name="password" class="form-control my-2">
                                                </div>

                                                <button type="submit" class="btn btn-primary my-2">Criar conta</button>
                                            </form>


                                        </div>
                                        <div class="col-lg">

                                            <h4>Faça o login</h4>

                                            <p>Possui uma conta? Faça login!</p>

                                            <form action="/login/login" method="POST">
                                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="email" name="email" class="form-control my-2">
                                                </div>

                                                <div class="form-group">
                                                    <label>Senha</label>
                                                    <input type="password" name="password" class="form-control my-2">
                                                </div>

                                                <button type="submit" class="btn btn-primary my-2">Entrar</button>
                                            </form>

                                        </div>
                                    </div>



                            </p>
